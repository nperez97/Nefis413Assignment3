@{
    ViewData["Title"] = "View Movies";
}
@model IEnumerable<Nefis413Assignment3.Models.AddMovie>
<body>
    <div class="container-fluid">
        <h1>@ViewData["Title"]</h1>
        <h2>Here is the list of movies</h2>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Category</th>
                    <th scope="col">Title</th>
                    <th scope="col">Year</th>
                    <th scope="col">Director</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Edited</th>
                    <th scope="col">Lent To</th>
                    <th scope="col">Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Nefis413Assignment3.Models.AddMovie movie in Model)
                {
                    <tr>
                        <td>@movie.Category</td>
                        <td>@movie.Title</td>
                        <td>@movie.Year</td>
                        <td>@movie.Director</td>
                        <td>@movie.Rating</td>
                        <td>@movie.Edited</td>
                        <td>@movie.LentTo</td>
                        <td>@movie.Notes</td>
                    </tr>

                }
            </tbody>
        </table>
        <br />
        <h3><a asp-controller="Home" asp-action="Movies">Click here</a> to add another movie</h3>
    </div>
</body>